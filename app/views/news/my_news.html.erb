<h1>Mis Noticias</h1>

<% if @news.any? %>
  <ul>
    <% @news.each do |news_item| %>
      <li>
        <strong><%= link_to news_item.title, news_item %></strong>
        <%= link_to 'Editar', edit_news_path(news_item) %> |
        <%= link_to 'Eliminar', news_item, method: :delete, data: { confirm: '¿Estás seguro?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tienes noticias.</p>
<% end %>
